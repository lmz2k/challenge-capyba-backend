        "/api/vacancy": {
            "get": {
                "tags": [
                    "Vagas de emprego"
                ],
                "description": "Listagem de vagas de emprego",
                "parameters": [
                    {
                        "name": "hiring_mode",
                        "in": "query",
                        "description": "Tipo de contratação",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "default": "BOTH",
                                "enum": [
                                    "BOTH",
                                    "CLT",
                                    "PJ"
                                ]
                            }
                        }
                    },
                    {
                        "name": "is_home_office",
                        "in": "query",
                        "description": "Boolean representando se é home office ou não",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "salary",
                        "in": "query",
                        "description": "Tipo de ordenação a partir do valor do salario",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "default": "asc",
                                "enum": [
                                    "asc",
                                    "desc"
                                ]
                            }
                        }
                    },
                    {
                        "name": "created_at",
                        "in": "query",
                        "description": "Tipo de ordenação a partir da data de criação da vaga",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "default": "asc",
                                "enum": [
                                    "asc",
                                    "desc"
                                ]
                            }
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Pequisa textual para encontrar vaga",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "occupation",
                        "in": "query",
                        "description": "Tipo de vaga, back, front ou full stack",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "default": "FULL",
                                "enum": [
                                    "BACK",
                                    "FRONT",
                                    "FULL"
                                ]
                            }
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Pagina da pesquisa",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Quantidade de itens por pagina",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "default": 20
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "422": {
                        "description": "Unprocessed Entity"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
