                                "properties": {
                                    "code": {
                                        "description": "Cádigo recebido por email",
                                        "type": "integer"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "code": 123456
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
