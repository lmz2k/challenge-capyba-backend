                "tags": [
                    "Autorização"
                ],
                "description": "EP para confirmar codigo recebido por email",
                "operationId": "564695eeddb600c33244c43a89d7cbec",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "code"
